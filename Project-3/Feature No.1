#include <Arduino.h>

int fibonacci(int n)
{
  if (n <= 0)
  {
    return 0;
  }
  else if (n == 1)
  {
    return 1;
  }
  else
  {
    return fibonacci(n - 1) + fibonacci(n - 2);
  }
}

void setup()
{
  Serial.begin(9600);
  Serial.println("pleas enter fibonacci number:");
}

void loop()
{
  if (Serial.available() > 0)
  {
    int n = Serial.parseInt();
    int result = fibonacci(n);

    Serial.print("number fibonacci ");
    Serial.print("is=");
    Serial.print("\n");
    Serial.println(result);
    
    delay(100);
  }
}
